{
	"name": "@michaelcuneo/chain-enhance",
	"version": "0.0.1",
	"description": "Sequentially chain multiple SvelteKit 5 form actions with progress tracking, deep merge, and type safety.",
	"type": "module",
	"public": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run prepack",
		"build:lib": "vite build --config vite.config.library.ts",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"prepack": "svelte-kit sync && svelte-package && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint ."
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js",
			"import": "./dist/index.js",
			"require": "./dist/index.js",
			"default": "./dist/index.js"
		},
		"./package.json": "./package.json",
		"./*": "./dist/*"
	},
	"peerDependencies": {
		"@sveltejs/kit": "^2.0.0",
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@eslint/compat": "^1.4.0",
		"@eslint/js": "^9.36.0",
		"@icons-pack/svelte-simple-icons": "^6.5.0",
		"@sveltejs/adapter-auto": "^6.1.0",
		"@sveltejs/kit": "^2.43.2",
		"@sveltejs/package": "^2.5.4",
		"@sveltejs/vite-plugin-svelte": "^6.2.0",
		"@types/node": "^22",
		"devalue": "^5.4.2",
		"dompurify": "^3.3.0",
		"eslint": "^9.36.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.12.4",
		"globals": "^16.4.0",
		"highlight.js": "^11.11.1",
		"marked": "^16.4.1",
		"marked-highlight": "^2.2.2",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"publint": "^0.3.13",
		"svelte": "^5.39.5",
		"svelte-check": "^4.3.2",
		"svelte-kit-sst": "^2.43.5",
		"tsx": "^4.20.6",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.44.1",
		"vite": "^7.1.7"
	},
	"keywords": [
		"svelte",
		"sveltekit",
		"form",
		"enhance",
		"workflow",
		"chain",
		"typescript"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/michaelcuneo/chain-enhance.git"
	},
	"homepage": "https://chain-enhance.michaelcuneo.com.au",
	"bugs": {
		"url": "https://github.com/michaelcuneo/chain-enhance/issues"
	}
}
